<% provide(:tools) do %>
    <div class="pt-2">
      <%= form_with(model: [@notebook, @page, @paragraph], html: { class: 'float-left mr-1' }) do |form| %>
        <%= button_tag(class: 'btn btn-toolbar') do %>
          <i class="fa fa-paragraph"></i>
        <% end %>
      <% end %>
      <%= form_with(model: [@notebook, @page, @image_element], html: { class: 'float-left mr-1' }) do |form| %>
        <%= button_tag(class: 'btn btn-toolbar') do %>
          <i class="fa fa-image"></i>
        <% end %>
      <% end %>
      <%= form_with(model: [@notebook, @page, @checklist], html: { class: 'float-left mr-1' }) do |form| %>
        <%= button_tag(class: 'btn btn-toolbar') do %>
          <i class="fa fa-check"></i>
        <% end %>
      <% end %>
      <%= link_to edit_notebook_page_path(@notebook, @page), class: 'btn btn-toolbar' do %>
        <i class="fa fa-edit"></i>
      <% end %>
    </div>
<% end %>

<div class="col-lg-10 offset-lg-1">
  <div class="card">
    <div class="card-body">
      <h3 class='p-4 pt-5'>
        <%= @page.title %>
      </h3>
      <%= render @page.elements %>
    </div>
  </div>
</div>
